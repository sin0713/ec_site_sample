<div class="container">
  <div class="row">
    <div class="col-md-12">
      jenre
    </div>
    <div class="col-md-10 mx-auto">
      <h3>商品一覧（全<%= @products.count %>件）</h3>
      <div class="mt-3">
        <div class="card-list-container-fluid">
          <div class="row">
            <% @products.each do |product| %>
              <div class="card mr-2 mt-4 shadow-lg">
                <%= link_to product_path(product) do %>
                  <%= attachment_image_tag product, :image, :fill, 200, 150 ,class:"card-img-top py-2 px-2"%>
                <% end %>
                <div class="card-body">
                  <div class="card-title"><%= product.name %></div>
                    <div>
                      ￥<%= product.add_tax_included_price.to_s(:delimited) %>
                    </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
